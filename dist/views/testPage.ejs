<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="text/css" rel="stylesheet" href="../style/index.css" />
    <!-- Prevent Form Summation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="../JS/ajaxForm.js"></script>
    <title>Front Page</title>
  </head>
  <body>
    <div class="container">
      <h1 class="title">Page Content</h1>
    </div>
    <div class="container">
      <h3>Form Element</h3>
      <form id="formElement" action="/submitForm" method="post">
        <h3>Name</h3>
        <input id="name" name="name" type="text" />
        <p class="nameError"></p>
        <h3>Email</h3>
        <input id="email" name="email" type="text" />
        <p class="emailError"></p>
        <button id="btn" type="submit">Submit Form</button>
      </form>
      <div class="msg">
        <h2>Thank You!</h2>
      </div>
    </div>
    <div class="container">
      <h3>Contact By Email</h3>
      <form id="contactForm" class="container" method="post" action="/contact">
        <input type="text" name="name" placeholder="name" required />
        <input type="text" name="email" placeholder="email" required />
        <input type="text" name="message" placeholder="message" required />
        <input type="submit" value="Send Message" required />
      </form>
      <div class="msg">
        <h2>Thank You!</h2>
      </div>
    </div>
  </body>
</html>
